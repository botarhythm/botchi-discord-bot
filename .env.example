# Discord Bot設定
DISCORD_TOKEN=your_discord_bot_token
PREFIX=!

# Bot基本設定
BOT_VERSION=1.3.0

# API Provider設定
# 'openai' または 'gemini' を選択
AI_PROVIDER=openai
# 'new'または'legacy' - 新しいプロバイダーシステムを使用する場合は'new'
DM_MESSAGE_HANDLER=new

# 文脈介入設定
# モード: none, passive, balanced, active, aggressive
INTERVENTION_MODE=balanced
# 介入トリガーキーワード（カンマ区切り）
INTERVENTION_KEYWORDS=ボッチー,Bocchy,ボット,Bot
# 介入クールダウン（秒）- 同じチャンネルで再度介入するまでの最小時間
INTERVENTION_COOLDOWN=60

# OpenAI API設定
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
# 必要に応じてエンドポイントを変更可能
# OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions

# Gemini API設定 (AI_PROVIDER=geminiの場合に使用)
GEMINI_API_KEY=your_gemini_api_key

# Supabase設定 (コンテキスト管理用)
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_key
# オプション: テーブル名のカスタマイズ
# SUPABASE_CONVERSATION_TABLE=conversations
# SUPABASE_MESSAGE_TABLE=messages
# Supabaseメモリシステムの有効・無効
MEMORY_ENABLED=true
# 自動マイグレーション（初回実行時）
SUPABASE_AUTO_MIGRATION=true

# デバッグ設定
DEBUG=false
LOG_LEVEL=info
# LOG_TO_FILE=true
# LOG_DIR=logs

# サーバー設定
PORT=3000
HEALTH_CHECK_INTERVAL=600000 # 10分 (ミリ秒)

# 環境設定
NODE_ENV=production # production または development

# RAG（Retrieval-Augmented Generation）設定
# RAGシステムの有効・無効
RAG_ENABLED=false
# 起動時に自動初期化するかどうか
RAG_INITIALIZE_ON_START=true
# 埋め込みモデル
EMBEDDING_MODEL=text-embedding-3-small
# ベクトル次元数
EMBEDDING_DIMENSIONS=1536
# チャンクサイズ設定
CHUNK_SIZE=1000
MIN_CHUNK_SIZE=100
CHUNK_OVERLAP=200
# 検索設定
RAG_MAX_RESULTS=5
RAG_SIMILARITY_THRESHOLD=0.75
RAG_MAX_CONTEXT_LENGTH=2000
# 使用設定
RAG_ENABLE_FOR_MENTIONS=true
RAG_ENABLE_FOR_DMS=true
RAG_ENABLE_FOR_COMMANDS=false
# クエリ拡張
RAG_QUERY_EXPANSION=true
RAG_MAX_QUERY_EXPANSIONS=2
